<% provide(:title, "Lead edit: #{@lead.full_name}") %>

<div class="container">
  <div class="row">
  	<div class="col-sm-10 col-sm-offset-1 main-area-contrast override">

      <%= render :partial => "communications/new_communication", locals: {c_id: @lead.id, c_type: "Lead", user_id: current_user.id} %>
      <%= render :partial => "communications/display_communications", locals: {communications: @communications} %>

  		<%= form_for @lead do |f| %>

  		<% [:first_name,:last_name,:source,:company,:title,:next_contact_content].each do |text_field| %>
  			<div class="field">
			    <%= f.label text_field %>
			    <%= f.text_field text_field %>
			  </div>
			 <% end %>

  		<div class="field">
			  <%= f.label :next_contact_date %>
			  <%= f.date_field :next_contact_date %>
			</div>

  		<% [:notes].each do |text_area| %>
  			<div class="field">
			    <%= f.label text_area %>
			    <%= f.text_area text_area %>
			  </div>
			 <% end %>			 

  		<%= f.submit "Save changes", class: "save-button" %>

  		<% end %>
  	</div>
  </div>
</div>