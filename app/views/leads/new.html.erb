<% provide(:title, "New lead creation") %>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 main-area-contrast override">

      <h3 class="bit-of-space"> New lead creation</h3>

      <%= form_tag admin_create_lead_path, method: :post do %>

        <%= render partial: "leads/lead_form_content", locals: {lead: @lead, lead_contact: @lead_contact, text_field_setup: @text_field_setup} %>

      <% end %>

      <%= link_to "Back to leads index", leads_path %>

    </div>
  </div>
</div>