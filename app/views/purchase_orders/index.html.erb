<% provide(:title,"Email reminders") %>

<div class="container hax-body-styling">
  <div class="row">

    <table class="table">
      <tr>
        <th>User ID</th>
        <th>User Name</th>
        <th>User Email</th>
        <th>PO ID</th>
        <th>Followup #</th>
        <th>Email sent</th>
      </tr>
      <% @users.each do |user| %>
        <% contact = user.lead.lead_contact %>
        <tr>
          <td><%= user.id %></td>
          <td><%= contact.full_name_untrusted %></td>
          <td><%= contact.email %></td>
          <td>po.id</td>
          <td>3</td>
          <td><%= link_to "Sent!" %></td>
        </tr>
      <% end %>
    </table>

  </div>
</div>