<% provide(:title,"Email reminders") %>

<div class="container hax-body-styling">
  <div class="row">

    <table class="table">
      <tr>
        <th>User ID</th>
        <th>User Name</th>
        <th>User Email</th>
        <th>Email allowed at/after</th>
        <th>Link to first email for appropriate PO</th>
        <th>PO ID</th>
        <th>This'll be the Xth email</th>
        <th>Sent?</th>
      </tr>
      <% @structure.each do |user,details| %>
        <% contact = user.lead.lead_contact %>
        <tr>
          <td><%= user.id %></td>
          <td><%= contact.full_name_untrusted %></td>
          <td><%= contact.email %></td>
          <td><%= details[:emailable_date].strftime("%b %e, %Y") %>
          <td>
            <% if details[:purchase_order].present? %>
              <%= link_to "Text for PO email", comments_request_for_review_path(details[:purchase_order].comment.id) %>
            <% end %>
          </td>
          <td>
            <% if details[:purchase_order].present? %>
              <%= details[:purchase_order].id %>
            <% end %>
          </td>
          <td>
            <% if details[:purchase_order].present? %>
              <%= details[:followup_number] %>
            <% end %>
          </td>
          <td>
            <% if details[:purchase_order] %>
              <%= link_to "Sent!", purchase_orders_email_sent_path(details[:purchase_order].id, details[:followup_number]) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>

  </div>
</div>