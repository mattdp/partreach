<ul>
  <% machines_quantity_hash.each do |k,v| %>
    <li>
      <% machine = Machine.find(k) %>
      <%= "#{machine.formatted_name} "%>
      <%= " (#{pluralize(v,"machine")}) " if v > 1 %>
      <% if show_delete %>
        <%= link_to "Delete all", destroy_owner_path(supplier.id,machine.id), method: :delete %>
      <% end %>
    </li>
  <% end %>
</ul>