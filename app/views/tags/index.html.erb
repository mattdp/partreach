<% provide(:title,"Tag index") %>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 main-area-contrast override">

      <p><%= link_to "Create new tag", new_tag_path %></p>
      <p><%= link_to "Back to analytics", analytics_metrics_path %></p>

      <table>
        <% current_group_name = "" %>
        <% @tags.each do |tag| %>
          <% group_name = tag.tag_group.group_name %>
          <% if group_name != current_group_name %>
            <% current_group_name = group_name %>
            <tr>
              <td colspan="7"><h4><strong><%= "Tag group: #{current_group_name}" %></strong></h4></td>
            </tr>
        <tr>
          <th>ID</th>
          <th>Readable</th>
          <th>Name</th>
          <th>Name for link</th>
          <th>Visible</th>
          <th>Exclusive</th>
          <th></th>
        </tr>
          <% end %>
          <tr>
            <td><%= tag.id %>
            <td><%= tag.readable %></td>
            <td><%= tag.name %></td>
            <td><%= tag.name_for_link %></td>
            <td><%= tag.visible %></td>
            <td><%= tag.exclusive %></td>
            <td><%= link_to "Edit", edit_tag_path(tag) %></td>
            <td><%= link_to "Related Tags", related_tags_path(tag) %></td>
        <% end %>
      </table>
    </div>
  </div>
</div>