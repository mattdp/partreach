<% provide(:title,"Tag index") %>

<div class="container">
  <div class="row">
  	<div class="col-sm-10 col-sm-offset-1 main-area-contrast override">

  		<p><%= link_to "Create new tag", new_tag_path %></p>
      <p><%= link_to "Back to analytics", analytics_metrics_path %></p>

    	<table>
        <tr>
          <th>ID</th>
          <th>Readable</th>
          <th>Family</th>
          <th>Name</th>
          <th>Name for link</th>
          <th>Edit</th>
          <th>Visible</th>
          <th>Exclusive</th>
        </tr>
	  		<% @tags.each do |tag| %>
          <tr>
            <td><%= tag.id %>
            <td><%= tag.readable %></td>
            <td><%= tag.family %></td>
            <td><%= tag.name %></td>
            <td><%= tag.name_for_link %></td>
            <td><%= tag.visible %></td>
            <td><%= tag.exclusive %></td>
	  			  <td><%= link_to "Edit", edit_tag_path(tag) %></td>
	  		<% end %>
  		</table>
  	</div>
  </div>
</div>