<% provide(:title,"New machine creation") %>

<div class="container">
  <div class="row">
  	<div class="col-sm-10 col-sm-offset-1 main-area-contrast override">

			<h3>Create new machine</h3>
			<%= form_for @machine, :action => "create" do |f| %>

				<div class="almost-one-half fleft">
					<%= f.label :manufacturer %>
				 	<%= f.text_field :manufacturer %>
			 	</div>
				<div class="almost-one-half fleft"	>
					<%= f.label :name %>
				 	<%= f.text_field :name %>
			 	</div>
				<div class="clear">
					<%= submit_tag "Create" %>
				</div>

			<% end %>

			<h3>All existing machines</h3>

			<%= render :partial => 'analytics/machines_table', locals: {machines: @machines} %>

		</div>
	</div>
</div>