<% provide(:title,"New machine creation") %>

<div class="container">
  <div class="row">
  	<div class="col-sm-10 col-sm-offset-1 main-area-contrast override">

			<h3>Create new machine</h3>

			<%= form_tag machines_path do %>

				<div class="almost-one-half fleft">
					<%= label_tag "manufacturer[name]", "Manufacturer" %>
				 	<%= text_field_tag "manufacturer[name]", @manufacturer.name %>
			 	</div>
				<div class="almost-one-half fleft"	>
					<%= label_tag "machine[name]", "Machine" %>
				 	<%= text_field_tag "machine[name]", @machine.name %>
			 	</div>
				<div class="clear">
					<%= submit_tag "Create" %>
				</div>

			<% end %>

			<h3>All existing machines</h3>

			<%= render :partial => 'analytics/machines_table', locals: {machines: @machines} %>

		</div>
	</div>
</div>