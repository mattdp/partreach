<% provide(:title,"Provider index") %>

<div class="container hax-body-styling">
  <div class="row">
    <div class="main-area-contrast override">
      <!-- this tool was super helpful making quick tables: http://www.textfixer.com/html/csv-convert-table.php -->
       <%= render partial: "organizations/navigation_header", locals: {middle_text: "See who #{@people_called} are using to make parts", organization: @organization} %>
      <%= render :partial => "providers/providers_header" %>      

      <% if @results_hash.present? %>
        <% @results_hash.each do |header, providers| %>
          <div class="col-md-12">
            <h3 class="no-margin-top margin-bottom">
              <span><%= header %></span>
            </h3>
            <% if providers %> 
              <%= render partial: "providers/providers_table", locals: {providers: providers, include_tag_column: false, cache_result: false, purchase_order_titles: @purchase_order_titles} %>
            <% else %>
              <p>We don't have any suppliers fitting this description. Help out by <%= mail_to "founders@supplybetter.com", "submitting one now" %>!</p>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="row index-row">
          <div class="col-md-3 col-sm-3 col-xs-12 sidebar">
            <h3>Choose a Category</h3>
            <ul>
              <!-- MATT SAVE ME -->
              <li>Injection molding</li>
              <li>Machining</li>
              <li>Urethane Casting</li>
              <li>Sheet Metal</li>
              <li>Finishing</li>
              <li>Plating</li>
              <li>Painting</li>
              <li>Waterjet Cutting</li>
              <li>Laser Cutting</li>            
              <li>Testing</li>
            </ul>
          <h3>Choose a Project</h3>
          <ul>
            <!-- MATT SAVE ME -->
            <li>Snow Cap Ph7</li>
            <li>Shared Services ME Overhead</li>
            <li>Scotts Ecolawn System Ph1</li>
            <li>xCycleDev: Imagineering Experience Prototypes</li>
            <li>KITT Ph8</li>
          </ul>
          </div>
          <div class="col-md-9 col-sm-9 col-xs-12">
            <%= render partial: "providers/activity_feed", locals: {activity_items: @recent_recommendations, title: "Recent Recommendations"} %>
            <%= render partial: "providers/activity_feed", locals: {activity_items: @recent_activity, title: "Recent Reviews and Comments"} %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>