<% provide(:title,"Teams - sample profile") %>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 main-area-contrast override">
    
      <div class="profile-spacing">
        <p><%= link_to "Back to HAX SUPPLIERS", teams_index_path %></p>

        <div class="table-header">
          <h3>Address information <span class="heading_navigation">[<%= link_to "Edit" %>]</span></h3>
          <ul>
            <li><strong>City: </strong><%= "#{@provider.city}" %></li>
            <li><strong>Full address: </strong><%= "#{@provider.address}" %></li>
          </ul>

          <h3>Contact information <span class="heading_navigation">[<%= link_to "edit" %>]</span></h3>
          <ul>
            <li><strong>QQ: </strong><%= @provider.contact_qq %></li>
            <li><strong>Phone: </strong><%= @provider.contact_phone %></li>
            <li><strong>Email: </strong><%= @provider.contact_email %></li>
            <li><strong>Website: </strong><%= link_to "Link", @provider.url_main %>
          </ul>    

          <% if @provider.contact_name %>
            <p><strong>Best contact:</strong> <%= @provider.contact_name %> 
            <% if @provider.contact_role %>
              (role: <%= @provider.contact_role %>)
            <% end %>
            </p>
          <% end %> 
        </div>

        <h1>
        <%= @provider.name %>
        <span class="heading_navigation">[<%= link_to "edit" %>]</span>
        </h1>

        <div class="verified">
          <img class="supplier-index-indicator" alt="Verified icon" src="/assets/check59.svg" title="This provider has been verified to exist" >
          Verified
        </div>

        <h3>
          What they can do for you
         <span class="heading_navigation">[<%= link_to "edit" %>]</span>
        </h3>
        <% @tags.each do |tag| %>
          <ul>
            <li><%= "#{tag.readable}" %></li>
          </ul>
        <% end %>

        <h3>
          Purchase orders
         <span class="heading_navigation">[<%= link_to "add a purchase" %>]</span>
         </h3>  
         <ul>
          <% @po_names.each do |name| %>
            <li><%= "#{name}" %></li>
          <% end %>
        </ul>

        <h3>
          Factory visits
         <span class="heading_navigation">[<%= link_to "add a visit" %>]</span>
         </h3>
        <ul>
          <% @fv_names.each do |name| %>
            <li><%= "#{name}" %></li>
          <% end %>
        </ul>

        <h3>
          Comments
          <span class="heading_navigation">[<%= link_to "add a comment" %>]</span>
        </h3>

        <% if @comments.present? %>
          <% @comments.each do |comment| %>
            <% contact = comment.user.lead.lead_contact %>
            <p><strong><%= "#{contact.first_name_and_team}: " %></strong><%= raw(comment.payload) %></p>
          <% end %>
        <% else %>
          <p>No information yet - be the first to add some!</p>
        <% end %>

      </div>

    </div>
  </div>
</div>