<% provide(:title,"#{@provider.name} - profile") %>

<div class="container hax-body-styling">
  <div class="row">
     <div class="col-md-4">
      <p><%= link_to "Back to search page", teams_index_path %></p>
    </div>
  </div>
  <div class="row">
    <!-- BEGIN LEFT COLUMN -->
    <div class="col-md-4">
      
      <!-- COMPANY NAME -->
      <div class="provider-profile">
        <h1>
          <%= @provider.name %>
          <span class="heading_navigation">[<%= link_to "Edit", edit_provider_with_event_path(@provider.id,"edit_providername_from_profile") %>]</span>
        </h1>
      </div>
      
      <!-- STAR RATINGS -->
      <!-- need to add an if statement to handle the case when there are no comments (and prompt the user to add a comment) -->
      <div class="row">
        <%= render partial: "providers/star_display", locals: {score: @provider.average_score} %>
        <span class="heading_navigation">
          <a href="#comments">
            <% total_provider_comments = @provider.comments.count %>
            <% if total_provider_comments %>
              <%= "#{pluralize(total_provider_comments, 'comment')}" %>
            <% end %>
          </a>
        </span>
      </div>      

      <!-- ADDRESS SECTION -->
      <div class="comment-profile">
        <p class="comment-smalltext"><strong>Best person to contact: </strong> <%= "#{@provider.contact_name} (role: #{@provider.contact_role})"%></p>
        <p class="comment-smalltext"><strong>Phone: </strong><%= @provider.contact_phone %></p>
        <p class="comment-smalltext"><strong>Email: </strong><%= @provider.contact_email %></p>
        <p class="comment-smalltext">
          <strong>Website: </strong>
          <% if @provider.url_main.present? %>
            <%= link_to "Link", @provider.url_main %>
          <% end %>
        </p>            
        <p class="comment-smalltext"><strong>Full address: </strong><%= "#{@provider.location_string}" %></p>
      </div>
      

      <!-- PURCHASE ORDERS -->
      <h3>Purchase orders</h3> 
      <% if @po_names.present? %> 
        <ul>
          <% @po_names.each do |name| %>
            <li><p><%= "#{name}" %></p></li>
          <% end %>
        </ul>
      <% else %>
        <p>None yet!</p>
      <% end %>

    </div> 

    <!-- BEGIN MIDDLE COLUMN -->
