<% provide(:title, "Sign in") %>

<div class="container hax-body-styling">
  <div class="row">
    <div class="col-md-4">

      <h1>Sign in</h1>

      <%= form_for(:session, url: sessions_path) do |f| %>
        <div>
          <%= f.label :email %>
          <br>
          <%= f.text_field :email, class: "input_field" %>
        </div>
        <br>
        <div>
          <%= f.label :password %>
          <br>
          <%= f.password_field :password %>
          <p><%= link_to "Forgot your password?", new_password_reset_path %></p>
        </div>
        <br>
        <div>
          <%= f.submit "Sign in", class: "sign-in-button save-button" %>
        </div>
        <br>
      <% end %>

    </div>
  </div>
</div>
