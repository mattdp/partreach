<%= form_tag :action => form_action, :controller => 'providers' do %>

<div class="col-md-8 col-md-offset-1">

<hr>

<div class="row">
  <div class="col-md-3">
  <%= label_tag 'name', 'Business name' %>
  </div>

  <div class="col-md-9">
    <span class="provider-edit-input">
    <%= text_field_tag 'name', @provider.name %>
    </span>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-3">
  <%= label_tag 'url_main', 'Website' %>
  </div>

  <div class="col-md-9">
    <span class="provider-edit-input">
    <%= text_field_tag 'url_main', @provider.url_main %>
    </span>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-3">
  <%= label_tag 'organization', 'Share Details With' %>
  </div>

  <div class="col-md-9">
    <span class="provider-edit-details">
      (Information will not be shared beyond this group)
    </span>
  </div>
</div>


<hr>

<div class="row">
  <div class="col-md-3">
    <%= label_tag 'verified', 'Existence Verified'%>
</div>

  <div class="col-md-9">
    <span>
      <%= check_box_tag 'verified', @provider.verified %>
    </span>
    <span class="provider-edit-details">
      (You have verified this provider exists in person or on the phone)
    </span>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-3">
  <%= label_tag 'city', 'District, City' %>
  </div>

  <div class="col-md-9">
    <span class="provider-edit-input">
      <%= text_field_tag 'city', @provider.city %>
      </span>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-3">
  <%= label_tag 'address', 'Full address' %>
  </div>

  <div class="col-md-9">
    <span class="provider-edit-input">
      <%= text_area_tag 'address', @provider.address %>
      </span>
  </div>
</div>


<h2>Contact information</h2>

<hr>

<div class="row">
  <div class="col-md-3">
  <%= label_tag 'contact_name', 'Contact Name' %>
  </div>

  <div class="col-md-9">
    <span class="provider-edit-input">
      <%= text_field_tag 'contact_name', @provider.contact_name %>
    </span>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-3">
  <%= label_tag 'contact_role', 'Contact Role' %>
  </div>

  <div class="col-md-9">
    <span class="provider-edit-input">
      <%= text_field_tag 'contact_role', @provider.contact_role %>
    </span>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-3">
  <%= label_tag 'contact_qq', 'QQ' %>
  </div>

  <div class="col-md-9">
    <span class="provider-edit-input">
      <%= text_field_tag 'contact_qq', @provider.contact_qq %>
      </span>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-3">
  <%= label_tag 'contact_phone', 'Phone' %>
  </div>

  <div class="col-md-9">
    <span class="provider-edit-input">
      <%= text_field_tag 'contact_phone', @provider.contact_phone %>
      </span>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-3">
  <%= label_tag 'contact_skype', 'Skype Username' %>
  </div>

  <div class="col-md-9">
    <span class="provider-edit-input">
      <%= text_field_tag 'contact_skype', @provider.contact_skype %>
    </span>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-3">
  <%= label_tag 'contact_email', 'Email' %>
  </div>

  <div class="col-md-9">
    <span class="provider-edit-input">
      <%= text_field_tag 'contact_email', @provider.contact_email %>
    </span>
  </div>
</div>

<hr>

</div>

<div class="row">
  <div class="col-md-11 col-md-offset-1">
    <h2>Tags</h2>
    <div id="keyword-list" class="provider-tags">
      <ul>
        <% @tags.each do |tag| %>
          <li>
          <%= check_box_tag 'tag_selection[]', tag.id, @checked_tags.include?(tag) %><%= tag.readable %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


  <div class="col-md-8 col-md-offset-1">
    <%= label_tag 'new_tag_name_1', "Tag isn't here? Add it to the list! (tags will be added to this business as well)" %>
    <div class="row">
      <div class="col-md-3">
      New Tag 1 (optional)
      </div>
      <div class="col-md-4">
        <span class="provider-edit-input">
        <%= text_field_tag 'new_tag_1' %>  
        </span>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
      New Tag 2 (optional)
      </div>
      <div class="col-md-4">
        <span class="provider-edit-input">
        <%= text_field_tag 'new_tag_2' %>  
        </span>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
      New Tag 3 (optional)
      </div>
      <div class="col-md-4">
        <span class="provider-edit-input">
        <%= text_field_tag 'new_tag_3' %>  
        </span>
      </div>
    </div>
    <div class="row">
    <%= submit_tag "Save changes", data: { disable_with: 'Saving...' }, :id => "save_button" %>
    <% end %>
    </div>
  </div>


