<% if activity_items.present? %>
  <h2 class="center"><%= title %></h2>
  <div class="row ">          
    <% activity_items.each do |item| %>
      <div class="row">
        <div class="col-md-12">
          <hr class="no-margin">
            <p class="small-margin-left">
              <%= "#{item.updated_at.strftime('%m/%d')}: " %>           
              <% if item.class.to_s == "Comment" %>
                <%= render partial: "providers/activity_individual_comment", locals: {comment: item} %>
              <% elsif (item.class.to_s == "Event" and item.happening == "updated a provider") %>
                <%= render partial: "providers/activity_individual_provider_event", locals: {event: item, content_text: "edited profile information for"} %>
              <% elsif (item.class.to_s == "Event" and item.happening == "created a provider" )%>
                <%= render partial: "providers/activity_individual_provider_event", locals: {event: item, content_text: "created a new profile for"} %>
              <% end %>         
            </p>
        </div>
      </div>
    <% end %>          
  </div>
<% end %>