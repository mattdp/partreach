<% provide(:title,"Testimonials from SupplyBetter users") %>
<% meta_description "Many businesses have shared how much SupplyBetter helped them" %>

<div class="container">
  <div class="row">
  	<div class="col-sm-10 col-sm-offset-1 main-area-contrast override">

  	<table>
			<% @testimonials.each do |testimonial| %>
				<tr>
					<td>
						A PICTURE!
					</td>
					<td>
						<p class="left"><%= "#{testimonial[:praise]}" %></p>
						<p class="right"><%= "-#{testimonial[:person]}, #{testimonial[:title]}, #{testimonial[:company]}" %></p>
					</td>
				</tr>
			<% end %>
		</table>


		</div>
	</div>
</div>