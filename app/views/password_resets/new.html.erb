<% provide(:title, "Request password reset") %>

<div class="row">
	<div class="span6 offset3">

		<h1>Password

		<%= form_tag password_resets_path, :method => :post do %>
		  <div class="field">
		    <%= label_tag :email %>
		    <%= text_field_tag :email, params[:email] %>
		  </div>
		  <div class="actions"><%= submit_tag "Reset Password" %></div>
		<% end %>
	</div>
</div>