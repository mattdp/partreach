<% provide(:title, "Request password reset") %>
<% meta_description "Request password reset" %>

<div class="row">
  <div class="col-md-12">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">

      <h1>Reset your password</h1>

      <%= form_tag password_resets_path, :method => :post do %>
        <div class="field comment-title">
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email] %>
        </div>
        <div>
          <%= submit_tag "Send Request", class: "save-button" %>
        </div>
      <% end %>
      </div>
  </div>
</div>