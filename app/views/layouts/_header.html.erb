<header class="header content">
  <div class="container">
    <h1>
      <%= link_to "#{brand_name}", root_path, id: "logo", class: "logo pull-left" %>
    </h1>
    <ul class="nav pull-right">
      <% if signed_in? %>
        <li><%= link_to "New RFQ", new_order_path %></li>
        <li><%= link_to "My RFQs", orders_path %></li>
        <li id="fat-menu" class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= "#{current_user.email}" %><b class="caret"></b>
          <ul class="dropdown-menu">
            <li><%= link_to "My profile", current_user %></li>
            <li class="divider"></li>
            <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to "Request quotes",    signup_path %></li>
        <li><%= link_to "Sign in",    signin_path %></li>
      <% end %>
    </ul>
  </div>
</header>
