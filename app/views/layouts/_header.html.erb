<header class="header">
  <div class="header__inner">
    <h1 class="header__logo">
      <%= link_to root_path do %>
        <%= image_tag "supplybetter-logo-white-cropped.svg", :alt => "SupplyBetter" %>
      <% end %>
    </h1>
    <ul class="header__links">
      <% if signed_in? %>
        <% if current_user.supplier_id %>
          <li><%= link_to "Edit my supplier page", edit_supplier_path(current_user.supplier_id) %></li>
        <% end %>
        <li><%= link_to "New RFQ", new_order_path %></li>
        <li><%= link_to "My RFQs", orders_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= "#{current_user.lead.lead_contact.email}" %></a>
          <ul class="dropdown-menu">
            <li><%= link_to "My profile", current_user %></li>
            <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to "Request quotes", signup_path %></li>
        <li><%= link_to "Sign in", signin_path %></li>
      <% end %>
    </ul>
  </div>
</header>
