<header class="navbar nav">
  <div class="container">
    <div class="row">
      <div class="col-sm-3 col-sm-offset-1">
        <p>
          <%= link_to "#{brand_name}", root_path, id: "logo", class: "logo navbar-left" %>
        </p>
      </div>
      <div class="col-sm-8 full-height">
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
            <% if current_user.supplier_id %>
              <li><%= link_to "Edit my supplier page", edit_supplier_path(current_user.supplier_id) %></li>
            <% end %>
            <li><%= link_to "New RFQ", new_order_path %></li>
            <li><%= link_to "My RFQs", orders_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= "#{current_user.email}" %><b class="caret"></b>
              <ul class="dropdown-menu">
                <li><%= link_to "My profile", current_user %></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Request quotes", signup_path %></li>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
