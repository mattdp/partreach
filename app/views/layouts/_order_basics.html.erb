<div class="order_basics bit-of-space">
	<% if @order.name != "" %>
		<strong>Order name: </strong> <%= "#{@order.name}" %>
		<br>
	<% end %>
	<span class="index_quantity"><strong>Quantity: </strong><%= "#{@order.quantity}" %></span>
	<% if !@user.address.nil? and @user.address.zip.length > 0 %>
		<span class="index_quantity"><strong>Zip Code: </strong><%= "#{@user.address.zip}" %></span>
	<% end %>
	<strong>Units: </strong><%= "#{@order.drawing_units}" %>
	<br>
	<strong>Material requested: </strong><%= "#{@order.material_message}" %>
	<br>
	<% if !(@order.supplier_message.nil? or @order.supplier_message == "") %>
		<strong>Message to suppliers: </strong><%= "#{@order.supplier_message}" %>
		<br>
	<% end %>
	<% if !(@order.recommendation.nil? or @order.recommendation == "") %>
		<strong>Our recommendation: </strong><%= "#{@order.recommendation}" %>
		<br>
	<% end %>
	<% if !(@order.next_steps.nil? or @order.next_steps == "")%>
		<strong>Suggested next steps: </strong><%= "#{@order.next_steps}" %>
		<br>
	<% end %>
	<%= link_to "Leave a supplier review", new_review_path %>
	<% if current_user.admin? %>
		<%= "or admin privileges: " %>
		<%= link_to "Manipulate dialogues (admin)", manipulate_path(@order) %>
	<% end %>
</div>