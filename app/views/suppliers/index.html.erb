<h1>Gallery of additive manufacturers in the US</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Zipcode</th>
    <th>Blurb</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @suppliers.each do |supplier| %>
  <tr>
    <td><%= supplier.name %></td>
    <td><%= link_to supplier.url, url_with_protocol(supplier.url), :target => '_blank' %></td>
    <td><%= supplier.blurb %></td>
    <td><%= link_to 'Show', supplier %></td>
    <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
    <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

