<div class="content sign-in">
  <% provide(:title, "Sign in") %>
  <div class="hero container">
    <h1>Sign in</h1>
  </div>

  <div class="row container">
    <div class="span8 offset2 form form-email">
      <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email, class: "input_field" %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Sign in", class: "sign-in-button" %>
      <% end %>

    <p><%= link_to "Forgot your password?", new_password_reset_path %></p>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    
    <p class="back_to_home"><%= link_to "Back to home", root_path %></p>

    </div>
  </div>
</div>
