<% provide(:title, "Sign in") %>
<% meta_description "Sign into SupplyBetter to see what quotes you've received" %>

<div class="row">
	<div class="col-md-12">
		<div class="col-md-4"></div>
		<!-- begin form -->
		<div id="any-form" class="col-md-4 any-form">

			<h1>Sign in</h1>

			<%= form_for(:session, url: sessions_path) do |f| %>				
				<%= f.label :email %>          
				<%= f.text_field :email %>
				<%= f.label :password %>          
				<%= f.password_field :password %>     
				<%= link_to "Forgot your password?", new_password_reset_path %>
				<%= f.submit "Sign in", class: "btn-block save-button", :id => "save_button"%>				
			<% end %>    

			<div>
				<em>Don't have an account, but want to learn how SupplyBetter can help you reduce time to market? Reach out to us using the chat box on the lower right of your screen!</em>
			</div>
		</div>
	</div>
</div>
