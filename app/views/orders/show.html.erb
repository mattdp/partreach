<%= form_tag :action => 'update', :controller => 'orders' do %>

	<%= hidden_field_tag "submitting_page", "orders_show" %>

	<p><%= "Request name: #{@order.name}" %></p>
	<p><%= "Quantity needed: #{@order.quantity}" %></p>
	<p><%= "Due date: #{@order.deadline.to_s}" %></p>

	<table>
	  <tr>
	    <th>Supplier name</th>
	    <th>Bid status</th>
	    <th>Bid amount</th>
	    <th>Selected for further negotiation?</th>
	    <th>Won the deal?</th>
	    <th></th>
	  </tr>

		<% @order.dialogues.each do |d| %>
			<tr>
				<td><%= Supplier.find(d.supplier_id).name %></td>
				<td><%= bid_status(d) %></td>
				<td><%= bid_amount(d) %></td>
				<td><%= check_box_tag "further_negotiation[]", d.id, d.further_negotiation %></td>
				<td><%= radio_button_tag "won", d.id, d.won %></td>
			</tr>
		<% end %>
		<tr>
			<% 3.times do |t| %>
				<td></td>
			<% end %>
			<td>No deal, no winner:</td>
			<td><%= radio_button_tag "won", 0, @order.is_over_without_winner %></td>
		</tr>

	</table>

	<%= submit_tag "Save changes", :disable_with => "Saving..." %>

	<%= link_to 'Back', orders_path %>

<% end %>
