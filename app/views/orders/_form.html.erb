<%= form_tag :action => 'create', :controller => 'orders' do %>
  
  <div>
    <%= text_field_tag 'quantity', nil, :placeholder => 'Enter quantity here' %>
    <%= label_tag 'quantity', 'How many do you want?' %>
  </div>

  <div>
    <% for supplier in @suppliers %>
      <div>
        <%= check_box_tag supplier.name %>
        <%= label_tag supplier.name %>
      </div>
    <% end %>
  </div>

  <%= submit_tag "Create order", :disable_with => "Creating..." %>

<% end %>