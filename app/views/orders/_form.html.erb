  <div class="row">
    <div class="span6 offset3">

      <div id="new-order-errors" class="error_explanation">
        <h2><i></i> error(s) prohibited this order from being saved:</h2>
        <ul></ul>
      </div>

      <h3>The basics</h3>

      <p>Attach drawing (<64 MB) here:</p>
        
      <form id='direct-upload' action="https://partreach_initial_bucket.s3.amazonaws.com" method="post" enctype="multipart/form-data">
        <input type='hidden' name='key' />
        <input type='hidden' name='AWSAccessKeyId' value='AKIAIPDMFQSARFMTN4XA' />
        <input type='hidden' name='acl' value='public-read' />
        <input type='hidden' name='policy' />
        <input type='hidden' name='signature' />
        <input type='hidden' name='success_action_status' value='201' />
        <input type='file' name='file' />
        <div class='progress progress-striped active'>
          <div class='bar'></div>
        </div>
        <div id="direct-upload-success">
          Upload succeeded.
        </div>
        <div id="direct-upload-failure">
          Upload failed.
        </div>
      </form>

      <%= form_tag '/orders.json', id: 'new-order', method: :post, 'data-remote' => true do %>
      
        <input type="hidden" name="file" value="" id="direct-upload-file">

        <%= label_tag 'quantity_field', 'How many of that do you want produced?' %>
        <%= text_field_tag 'quantity_field', nil, :placeholder => 'Enter quantity here' %>

        <%= label_tag :deadline, 'What\'s the last day you\'ll accept new quotes? (optional)' %>
        <div class "date_select_fields">
          <%= select_month Date.today.month, prefix: :deadline %>
          <%= select_day Date.today.day, prefix: :deadline %>
          <%= select_year Date.today.year, prefix: :deadline, start_year: Date.today.year, end_year: Date.today.year + 3 %>
        </div>

        <h3>Supplier selection</h3>

        <% for supplier in @suppliers %>
          <div class="new_supplier_listing">
            <%= check_box_tag "supplier_list[]", supplier.id, true, class: "new_supplier_checkbox" %>
            <%= label_tag "supplier_list[]", supplier.name, class: "new_supplier_label" %>
            <%= link_to "Supplier website", supplier.url_main, class: "new_supplier_website" %> 
            <%= link_to "Supplier materials", supplier.url_materials, class: "new_supplier_website" %>
            <p class="new_supplier_blurb"><%= "#{supplier.blurb}" %></p>
          </div>
        <% end %>

        <p id="missing_supplier">Are we missing a supplier that you want added? <%= mail_to "info@supplybetter.com", "Let us know!", encode: "javascript", target: "_blank", subject: "Suggestion to add a #{brand_name} supplier", body: "Hi! My username is '#{current_user.name}'. I have a suggestion to add a supplier:" %></p>
      
        <h3>Final notes</h3>  

        <%= label_tag 'text_field_tag', 'What message do you want sent to suppliers?' %>
        <%= text_area_tag 'supplier_message_field', nil, :rows => 4, :placeholder => "If you have materials in mind or time constraints, let suppliers know (optional)" %>

        <%= label_tag 'name_field', 'What do you want to call this order?' %>
        <%= text_field_tag 'name_field', nil, :placeholder => "(Naming optional)" %>

        <%= submit_tag "Create order", :disable_with => "Creating...", :id => "create_button" %>

        <p><%= link_to 'Back to orders', orders_path %></p>
      
      <% end %>

    </div>
  </div>
